<%= form_with(model: resume) do |form| %>
  <% if resume.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resume.errors.count, "error") %> prohibited this resume from being saved:</h2>

      <ul>
        <% resume.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.datetime_select :age %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :picture %>
  </div>
  <img src="<%= @somebody.picture %>" alt="photo" class="img-thumbnail">
  
  <div class="field">
    <%= form.label :about %>
    <%= form.rich_text_area :about %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
